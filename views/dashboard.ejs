<% include ./head %>
<% include ./header %>

<div class="container">
	<h1>Welcome <%= user.email %></h1>

	<div class="row">
		<div class="col-md-12">
			<h3>There are currently <%= posts.length %> posts on the site.</h3>
			<button class="btn btn-primary" data-toggle="modal" data-target="#mdl_post">Add Post</button>
			<button class="btn btn-primary" data-toggle="modal" data-target="#mdl_quote">Add Quote</button>
		</div>
		<div class="col-md-12">
			<table class="table">
				<tr>
					<th>Post ID</th>
					<th>Title</th>
					<th>Content</th>
					<th>Author</th>
					<th>Post Date</th>
					<th>Edit</th>
				</tr>
				<%
					for( var i = 0; i < posts.length; i++ ){
				%>
				<tr>
					<td><%= posts[i].id%></td>
					<td><%= posts[i].post_title%></td>
					<td><%= posts[i].post_content%></td>
					<td><%= posts[i].nickname%></td>
					<td><%= posts[i].post_date%></td>
					<td><a href="">Edit</a></td>
				</tr>
				<%
					}
				%>
			</table>
		</div>
	</div>
</div>

<div class="modal fade" id="mdl_quote">
	<div class="modal-dialog">
		<div class="modal-content">
			<form id="frm_quote" action="save/quote" method="post">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4>Add Quote</h4>
				</div>
				<div class="modal-body">
					<div class="form-group">
						<label>Quote</label>
						<input class="form-control required" name="quote" required="required">
					</div>
					<div class="form-group">
						<label>Author</label>
						<input class="form-control required" name="author" required="required">
					</div>
				</div>
				<div class="modal-footer">
					<button class="btn btn-default" type="button" data-dismiss="modal">Close</button>
					<input id="btn_quote" class="btn btn-primary" type="submit" value="Save Quote">
				</div>
			</form>
		</div>
	</div>
</div>

<div class="modal fade" id="mdl_post">
	<div class="modal-dialog">
		<div class="modal-content">
			<form id="frm_post" action="save/post" method="post">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4>Add Post</h4>
				</div>
				<div class="modal-body">
					<div class="form-group">
						<label>Post Title</label>
						<input class="form-control required" name="title" required="required">
					</div>
					<div class="form-group">
						<label>Post</label>
						<input class="form-control required" name="post" required="required">
					</div>
				</div>
				<div class="modal-footer">
					<button class="btn btn-default" type="button" data-dismiss="modal">Close</button>
					<input id="btn_quote" class="btn btn-primary" type="submit" value="Save Post">
				</div>
			</form>
		</div>
	</div>
</div>

<% include ./footer %>	

<script type="text/javascript">
	$(document).ready(function(){
		<% if(typeof message != 'undefined'){ %>
			$.notify({
				message: '<%= message%>'
			},{
				type: 'info',
				delay: 2000,
				placement: {
					from:'top',
					align:'center'
				},
				animate: {
					enter: 'animated fadeInDown',
					exit: 'animated fadeOutUp'
				}
			});
		<% } %>
	});
</script>