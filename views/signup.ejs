<% include ./head %>
<% include ./header %>

<div class="container">
	
<div class="col-xs-12 col-sm-6 col-sm-offset-3">
	<h1>Sign Up</h1>
	<% if(message.length>0){ %>
		<div class='alert alert-danger'><%= message %></div>
	<% } %>

	<!-- SIGN UP FORM -->
	<form id="frm_signup" class="whitebase" action="/signup" method="post">
		<div class="form-group">
			<label>Email</label>
			<input class="form-control" name="email">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input class="form-control" name="password">
		</div>
		<button type="submit" class="btn btn-danger btn-lg pull-right">Signup</button>
		<div class="clear"></div>
	</form>
	<hr>

	<p>Already have an account? <a href="/signup">Login</a></p>
	<p>Or go <a href="/">home</a>.</p>
</div>

</div>

<% include ./footer %>	